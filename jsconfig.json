{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		// "noImplicitAny": true,
		"esModuleInterop": true,
		// workspace상에서 references 패키지에서 root packges 모듈을 찾지 못하는 문제 해결
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		// class static private 변수를 사용하기 위함
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"checkJs": true,
		// "moduleResolution": "node",
		"sourceMap": true,
		// "checkJs": false,
		"baseUrl": ".",
		"typeRoots": ["types", "out"],
		"types": ["jquery", "lodash", "vue", "dayjs", "joi", "lottie"]
	},
	"include": ["**/*/*.ts", "**/*/*.js"],
	"exclude": [
		"**/*/global.js",
		"**/*/prototype.js",
		"**/*/pulltorefresh_club.js",

		".cache",
		".git",
		".idea",
		".output",
		".vscode",
		"build",
		"cron",
		"deploy",
		"dist",
		"docs",
		"local_history",
		"logs",
		"node_modules",
		"test"
	]
}
